{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "dist",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2023",
		"strict": true,
		"esModuleInterop": true,
		"ignoreDeprecations": "6.0",
		"typeRoots": ["./src/@types"]
	},
	"include": [
		"src/**/*",
		"generated/**/*",
		"prisma.config.ts",
		"prisma/**/*"
	]
}
